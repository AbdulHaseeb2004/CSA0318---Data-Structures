#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define MAX 100

typedef struct {
    char data[MAX];
    int top;
} Stack;

void initStack(Stack *s) {
    s->top = -1;
}

int isEmpty(Stack *s) {
    return s->top == -1;
}

void push(Stack *s, char c) {
    s->data[++(s->top)] = c;
}

char pop(Stack *s) {
    if(!isEmpty(s)) {
        return s->data[(s->top)--];
    }
    return '\0';
}

int isValidString(char *str) {
    Stack s;
    initStack(&s);
    
    for(int i = 0; str[i] != '\0'; i++) {
        char c = str[i];
        
        if(c == '(' || c == '{' || c == '[') {
            push(&s, c);
        }
        else if(c == ')' || c == '}' || c == ']') {
            if(isEmpty(&s)) return 0;
            
            char top = pop(&s);
            if((c == ')' && top != '(') ||
               (c == '}' && top != '{') ||
               (c == ']' && top != '[')) {
                return 0;
            }
        }
    }
    
    return isEmpty(&s);
}

int main() {
    char str[MAX];
    printf("Enter a string with parentheses: ");
    scanf("%s", str);
    
    if(isValidString(str)) {
        printf("True - Valid string\n");
    } else {
        printf("False - Invalid string\n");
    }
    
    return 0;
}
