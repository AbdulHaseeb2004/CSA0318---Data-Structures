#include <stdio.h>
#include <string.h>

void findRepeatedChars(char str[]) {
    int count[256] = {0};
    int firstIndex[256];
    
    // Initialize firstIndex with -1
    for(int i = 0; i < 256; i++) {
        firstIndex[i] = -1;
    }
    
    // Count characters and store first occurrence
    for(int i = 0; str[i] != '\0'; i++) {
        if(firstIndex[(unsigned char)str[i]] == -1) {
            firstIndex[(unsigned char)str[i]] = i;
        }
        count[(unsigned char)str[i]]++;
    }
    
    printf("Repeated characters and their first indices:\n");
    for(int i = 0; i < 256; i++) {
        if(count[i] > 1) {
            printf("Character '%c' appears %d times, first at index %d\n", 
                   i, count[i], firstIndex[i]);
        }
    }
}

int main() {
    char str[100];
    
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = 0;
    
    findRepeatedChars(str);
    
    return 0;
}
