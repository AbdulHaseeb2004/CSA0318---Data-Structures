#include <stdio.h>

void bubbleSortDesc(int arr[], int n) {
    for(int i = 0; i < n-1; i++) {
        for(int j = 0; j < n-i-1; j++) {
            if(arr[j] < arr[j+1]) {
                int temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
            }
        }
    }
}

int main() {
    int n1, n2;
    
    printf("Input the number of elements in first array: ");
    scanf("%d", &n1);
    int arr1[n1];
    printf("Input %d elements in the array:\n", n1);
    for(int i = 0; i < n1; i++) {
        printf("element - %d : ", i);
        scanf("%d", &arr1[i]);
    }
    
    printf("Input the number of elements in second array: ");
    scanf("%d", &n2);
    int arr2[n2];
    printf("Input %d elements in the array:\n", n2);
    for(int i = 0; i < n2; i++) {
        printf("element - %d : ", i);
        scanf("%d", &arr2[i]);
    }
    
    int n3 = n1 + n2;
    int merged[n3];
    
    // Copy arrays
    for(int i = 0; i < n1; i++) {
        merged[i] = arr1[i];
    }
    for(int i = 0; i < n2; i++) {
        merged[n1 + i] = arr2[i];
    }
    
    // Sort in descending order
    bubbleSortDesc(merged, n3);
    
    printf("The merged array in descending order is:\n");
    for(int i = 0; i < n3; i++) {
        printf("%d ", merged[i]);
    }
    printf("\n");
    
    return 0;
}
