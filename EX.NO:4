#include <stdio.h>

int main() {
    int n;
    
    printf("Input the number of elements to be stored in the array: ");
    scanf("%d", &n);
    
    int arr[n];
    printf("Input %d elements in the array:\n", n);
    for(int i = 0; i < n; i++) {
        printf("element - %d : ", i);
        scanf("%d", &arr[i]);
    }
    
    int duplicateCount = 0;
    
    for(int i = 0; i < n; i++) {
        int count = 0;
        // Check if this element was already counted
        int alreadyCounted = 0;
        for(int k = 0; k < i; k++) {
            if(arr[k] == arr[i]) {
                alreadyCounted = 1;
                break;
            }
        }
        
        if(!alreadyCounted) {
            for(int j = i + 1; j < n; j++) {
                if(arr[i] == arr[j]) {
                    count++;
                    break; // Count each element only once as duplicate
                }
            }
            if(count > 0) {
                duplicateCount++;
            }
        }
    }
    
    printf("Total number of duplicate elements found in the array is: %d\n", duplicateCount);
    
    return 0;
}
